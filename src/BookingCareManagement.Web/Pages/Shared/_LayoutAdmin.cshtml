<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Logo -->
        <div class="brand mb-3">
            <i class="bi bi-globe"></i>
        </div>

        <!-- Menu -->
        <a href="#"><i class="bi bi-calendar3"></i> Calendar</a>
        <a href="#"><i class="bi bi-speedometer2"></i> Dashboard</a>
        <a href="#"><i class="bi bi-clipboard-check"></i> Appointments</a>
        <a href="#"><i class="bi bi-people"></i> Employees</a>
        <a href="#"><i class="bi bi-person-badge"></i> Customers</a>
        <a href="#"><i class="bi bi-briefcase"></i> Services</a>
        <a href="#" class="active"><i class="bi bi-cash-coin"></i> Finance</a>
    </div>

    <!-- Navbar -->
    <nav class="navbar-custom d-flex justify-content-between align-items-center px-3 py-2">
        <!-- Left section: Booking Website -->
        <div class="d-flex align-items-center">
            <div class="btn-group">
                <!-- Nút chính -->
                <a href="https://yourbookinglink.com" target="_blank"
                   class="btn btn-primary d-flex align-items-center">
                    <i class="bi bi-globe me-2"></i> Booking Website
                </a>

                <!-- Nút dropdown -->
                <button class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown" aria-expanded="false">
                </button>

                <!-- Panel dropdown -->
                <div class="dropdown-menu p-3 shadow" style="min-width: 300px;">
                    <h6 class="fw-semibold mb-2">Booking Website URL</h6>
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm"
                               value="https://healthcaress.trafft.com" readonly>
                        <button class="btn btn-outline-secondary btn-sm" type="button">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right section: Notifications & Account -->
        <div class="d-flex align-items-center">
            <!-- Nút thông báo -->
            <div class="dropdown me-3" id="notifDropdownWrapper" data-bs-auto-close="outside">
                <button class="btn btn-light position-relative" id="notifDropdown" data-bs-toggle="dropdown">
                    <i class="bi bi-bell fs-5"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3 shadow" style="min-width: 300px;">
                    <ul class="nav nav-tabs" id="notifTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="alerts-tab" data-bs-toggle="tab"
                                    data-bs-target="#alerts" type="button" role="tab">
                                Booking Alerts
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="news-tab" data-bs-toggle="tab"
                                    data-bs-target="#news" type="button" role="tab">
                                Latest News
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content mt-3" id="notifTabsContent">
                        <div class="tab-pane fade show active text-center" id="alerts" role="tabpanel">
                            <small class="text-muted">There are no booking alerts</small>
                        </div>
                        <div class="tab-pane fade text-center" id="news" role="tabpanel">
                            <small class="text-muted">No new updates</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Avatar người dùng -->
            <div class="dropdown account-dropdown">
                <button class="btn btn-light d-flex align-items-center" data-bs-toggle="dropdown" id="accountDropdown">
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center"
                         style="width:36px; height:36px;">
                        L
                    </div>
                    <span class="ms-2 fw-semibold text-dark">Le Ngoc Bao Chan</span>
                    <i class="bi bi-caret-down-fill ms-1 small"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-start shadow p-2">
                    <button class="dropdown-item text-dark w-100 d-flex align-items-center">
                        <i class="bi bi-gear me-2 text-secondary"></i> Account Settings
                    </button>
                    <div class="dropdown-divider"></div>
                    <button class="dropdown-item text-danger w-100 d-flex align-items-center">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
