@page "/login"
@model BookingCareManagement.Pages.Auth.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
</head>
<body>
    <div class="login-container">
        <h2>Đăng nhập tài khoản</h2>
        <form id="login-form">
            <label for="email"><span class="required">*</span> Email</label>
            <input name="email" type="email" id="email" placeholder="Nhập email" required>


            <label for="password"><span class="required">*</span> Mật khẩu</label>
            <input name="password" type="password" id="password" placeholder="Nhập mật khẩu" required>


            <button type="submit" class="login-btn">Đăng nhập</button>
        </form>

        <div class="divider">
            <span>OR</span>
        </div>

        <div class="social-login">
            <button id="google-login" class="google">
                <img src="/img/google.png"
                     alt=""> Đăng nhập với Google
            </button>
            @* <button class="apple">
                <img src="/img/google.png"
                     alt=""> Log In with Apple
            </button>
            <button class="facebook">
                <img src="/img/facebook.png"
                     alt=""> Log In with Facebook
            </button>
            <button class="linkedin">
                <img src=".img/linkedin.png"
                     alt=""> Log In with LinkedIn
            </button> *@
        </div>

        <div class="footer-links">
            <p>Quên mật khẩu? <a href="forgot-password">Đặt lại mật khẩu</a></p>
            <p>Chưa có tài khoản? <a href="signup">Đăng ký ngay</a></p>
        </div>
    </div>
    <script src="~/js/auth.js" asp-append-version="true"></script>
</body>

</html>