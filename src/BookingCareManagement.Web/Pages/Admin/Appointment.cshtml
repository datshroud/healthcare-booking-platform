@page "/Admin/Appointment"
@model AppointmentModel
@{
    ViewData["Title"] = "Appointment";
}

@section Styles {
    <link href="~/css/appointment.css" rel="stylesheet" />
}

<div style="margin-top: 50px; padding: 2rem;">

    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Appointments (3)</h2>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary">
                <i class="fa-solid fa-upload me-1"></i> Export Data
            </button>
            <button class="btn btn-primary">
                <i class="fa-solid fa-plus me-1"></i> New Appointment
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm p-4 p-lg-5" style="border-radius: 12px;">

        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">

            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-light border-0" id="basic-addon1">
                    <i class="fa-solid fa-search"></i>
                </span>
                <input type="text" class="form-control bg-light border-0" placeholder="Search..." aria-label="Search">
            </div>

            <div class="d-flex flex-wrap align-items-center gap-3">
                <div class="d-flex align-items-center gap-2 text-nowrap">
                    <i class="fa-solid fa-calendar-days text-muted"></i>
                    <input type="text" class="form-control" id="startDate" value="Nov 1, 2025" style="width: 120px;">
                    <span>-</span>
                    <input type="text" class="form-control" id="endDate" value="Nov 10, 2025" style="width: 120px;">
                </div>

                <button class="btn btn-outline-secondary" id="toggleFiltersButton">
                    <i class="fa-solid fa-filter me-1"></i> Filters
                </button>
            </div>
        </div>

        <div id="filtersContainer" style="display: none;">
            <div class="d-flex flex-wrap gap-2">

                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa-solid fa-calendar-check me-1"></i> Service
                    </button>
                    <div class="dropdown-menu filter-dropdown-menu p-3">
                        <input type="text" class="form-control form-control-sm mb-2" placeholder="Search...">
                        <ul class="filter-options-list">
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="svc1">
                                    <label class="form-check-label" for="svc1">Heat and Ice Therapy</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="svc2">
                                    <label class="form-check-label" for="svc2">Therapeutic Exercise</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="svc3">
                                    <label class="form-check-label" for="svc3">Therapeutic Stretching</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa-solid fa-user me-1"></i> Customer
                    </button>
                    <div class="dropdown-menu filter-dropdown-menu p-3">
                        <input type="text" class="form-control form-control-sm mb-2" placeholder="Search...">
                        <ul class="filter-options-list">
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="cust1">
                                    <label class="form-check-label" for="cust1">Jone Doe</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa-solid fa-user-tie me-1"></i> Employee
                    </button>
                    <div class="dropdown-menu filter-dropdown-menu p-3">
                        <input type="text" class="form-control form-control-sm mb-2" placeholder="Search...">
                        <ul class="filter-options-list">
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="emp1">
                                    <label class="form-check-label" for="emp1">Le Ngoc Bao Chan</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="emp2">
                                    <label class="form-check-label" for="emp2">Jane Doe</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa-solid fa-circle-dot me-1"></i> Status
                    </button>
                    <div class="dropdown-menu filter-dropdown-menu p-3">
                        <ul class="filter-options-list">
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="stat1">
                                    <label class="form-check-label" for="stat1">Approved</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="stat2">
                                    <label class="form-check-label" for="stat2">Pending</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="stat3">
                                    <label class="form-check-label" for="stat3">Canceled</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="stat4">
                                    <label class="form-check-label" for="stat4">Rejected</label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="stat5">
                                    <label class="form-check-label" for="stat5">No Show</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>


        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="appointments-pane" role="tabpanel">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;"><input class="form-check-input" type="checkbox"></th>
                                <th>Time</th>
                                <th>Service</th>
                                <th>Customers</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Employee</th>
                                <th>Note</th>
                                <th style="width: 5%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-group-header">
                                <td colspan="9" class="pt-4 pb-1 small text-muted fw-bold" style="text-transform: uppercase;">
                                    November 3, 2025 (1)
                                </td>
                            </tr>
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <td>10:00 AM</td>
                                <td>Therapeutic Exercise</td>
                                <td>Jone Doe</td>
                                <td>1h</td>
                                <td>
                                    <span class="badge text-success bg-success-subtle border border-success-subtle rounded-pill fw-medium py-2 px-3">
                                        <i class="fa-solid fa-circle-check me-1"></i> Approved
                                    </span>
                                </td>
                                <td><img src="https://i.pravatar.cc/40?u=jane" alt="Employee" class="rounded-circle" width="32" height="32"></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-comment-dots fs-5"></i></button></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-ellipsis-vertical fs-5"></i></button></td>
                            </tr>

                            <tr class="table-group-header">
                                <td colspan="9" class="pt-4 pb-1 small text-muted fw-bold" style="text-transform: uppercase;">
                                    November 4, 2025 (1)
                                </td>
                            </tr>
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <td>10:30 AM</td>
                                <td>Therapeutic Stretching</td>
                                <td>Jone Doe</td>
                                <td>1h</td>
                                <td>
                                    <span class="badge text-success bg-success-subtle border border-success-subtle rounded-pill fw-medium py-2 px-3">
                                        <i class="fa-solid fa-circle-check me-1"></i> Approved
                                    </span>
                                </td>
                                <td><img src="https://i.pravatar.cc/40?u=mark" alt="Employee" class="rounded-circle" width="32" height="32"></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-comment-dots fs-5"></i></button></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-ellipsis-vertical fs-5"></i></button></td>
                            </tr>

                            <tr class="table-group-header">
                                <td colspan="9" class="pt-4 pb-1 small text-muted fw-bold" style="text-transform: uppercase;">
                                    November 5, 2025 (1)
                                </td>
                            </tr>
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <td>11:00 AM</td>
                                <td>Heat and Ice Therapy</td>
                                <td>Jone Doe</td>
                                <td>1h 30min</td>
                                <td>
                                    <span class="badge text-success bg-success-subtle border border-success-subtle rounded-pill fw-medium py-2 px-3">
                                        <i class="fa-solid fa-circle-check me-1"></i> Approved
                                    </span>
                                </td>
                                <td><img src="https://i.pravatar.cc/40?u=sara" alt="Employee" class="rounded-circle" width="32" height="32"></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-comment-dots fs-5"></i></button></td>
                                <td><button class="btn btn-link text-muted p-0"><i class="fa-solid fa-ellipsis-vertical fs-5"></i></button></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/appointment.js" asp-append-version="true"></script>
}