@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["IsFullWidth"] = true;
    var servicesPath = Url.Content("~/services");
    var heroBookingHref = User?.Identity?.IsAuthenticated == true
        ? servicesPath
        : Url.Page("/Account/Login", values: new { area = "Identity", returnUrl = servicesPath });
    var myBookingsPath = Url.Content("~/my-bookings");
    var heroMyBookingsHref = User?.Identity?.IsAuthenticated == true
        ? myBookingsPath
        : Url.Page("/Account/Login", values: new { area = "Identity", returnUrl = myBookingsPath });
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.css" />
}

<!-- Hero Section -->
<section class="hero-section" id="home">
