@page "/Account"
@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}

<div class="container-fluid mt-5 p-4 mb-5 rounded-4 account-container bg-dark text-light">
    <!-- Header -->
    <div class="row align-items-center justify-content-between mx-0 mb-3">
        <div class="col-auto">
            <h3 class="mb-0">. Le Ngoc Bao Chan</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-success btn-sm px-4 text-light  btn-account">View Bookings</button>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row border-top border-secondary pt-4 g-0">
        <!-- Cột trái -->
        <div class="col-3 left-menu pe-3">
            <button id="btnProfile" class="btn active-tab mb-2 fw-semibold">
                <i class="fa-solid fa-user me-2"></i> Profile Details
            </button>
            <button id="btnSettings" class="btn fw-semibold">
                <i class="fa-solid fa-gear me-2"></i> Account Settings
            </button>
        </div>

        <!-- Cột phải -->
        <div class="col-9 ps-4">
            <!-- Profile -->
            <div id="profileContent" class="account-content">
                <div class="row">
                    <div class="col-md-4 d-flex justify-content-center align-items-start">
                        <img src="~/images/default-avatar.jpg" alt="Avatar"
                             class="rounded-circle border border-secondary shadow-sm" width="200" height="200">
                    </div>

                    <div class="col-md-8">
                        <div class="row mb-3">
                            <div class="col">
                                <span class="required" style="color:red">* </span><label class="form-label">First Name</label>
                                <input type="text" class="form-control" value="." placeholder="Enter first name" required>
                            </div>
                            <div class="col">
                                <span class="required" style="color:red">* </span><label class="form-label">Last Name</label>
                                <input type="text" class="form-control" value="Le Ngoc Bao Chan" placeholder="Enter last name" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control">
                            </div>
                            <div class="col">
                                <span class="required" style="color:red">* </span><label class="form-label">Email</label>
                                <input type="email" class="form-control" value="6451071006@st.utc2.edu.vn" placeholder="Enter email" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" value="0787943490" placeholder="Enter phone number">
                            </div>
                        </div>
                        <div class="text-end border-top border-secondary pt-3">
                            <button class="btn btn-save px-4 text-light btn-account">Save</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings -->
            <div id="settingsContent" class="account-content d-none">
                <h5 class="mb-3">Change Password</h5>
                <div class="mb-3">
                    <span class="required" style="color:red">* </span><label class="form-label">Current Password</label>
                    <input type="password" class="form-control" placeholder="Enter current password" required>
                </div>
                <div class="mb-3">
                    <span class="required" style="color:red">* </span><label class="form-label">New Password</label>
                    <input type="password" class="form-control" placeholder="Enter new password" required>
                </div>
                <div class="mb-4">
                    <span class="required" style="color:red">* </span><label class="form-label">Repeat Password</label>
                    <input type="password" class="form-control" placeholder="Repeat new password" required>
                </div>

                <div class="border-top border-secondary pt-3 pb-2 d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold text-danger">Delete Account</div>
                        <div class="text-secondary small">Be careful, this action cannot be undone.</div>
                    </div>
                    <button class="btn btn-outline-danger rounded-3 border border-danger bg-dark text-danger px-3">
                        Delete Account
                    </button>
                </div>

                <div class="border-top border-secondary mt-4 pt-3 text-end">
                    <button class="btn btn-save px-4 text-light btn-account">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account.js" asp-append-version="true"></script>
}
