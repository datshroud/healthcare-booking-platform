@page "/auth/forgot-password"
@model BookingCareManagement.Web.Areas.Account.Pages.Auth.ForgotPasswordModel
@{
    // Use area's _ViewStart to provide the shared layout and set BodyClass for scoped auth styles
    ViewData["BodyClass"] = "auth-page";
}

@section Head {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forgot-password.css" asp-append-version="true" />
    <title>Quên mật khẩu</title>
}

<h2>Quên mật khẩu?</h2>
<div class="forgot-container">
    <form id="forgot-form">
        <label for="email"><span class="required">*</span> Email</label>
        <input name="email" type="email" id="email" placeholder="Nhập email" required>
        <button type="submit" class="forgot-button">Gửi email khôi phục</button>
    </form>

    <div class="footer-links">
        <p>Nhớ mật khẩu? <a asp-area="Account" asp-page="/Auth/Login">Đăng nhập</a></p>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>
}

