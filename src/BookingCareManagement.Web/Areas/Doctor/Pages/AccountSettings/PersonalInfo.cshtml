@page "/account-settings/personal-info"
@model BookingCareManagement.Web.Areas.Doctor.Pages.AccountSettings.PersonalInfoModel
@{
    ViewData["Title"] = "Personal Info";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-settings.css" />
}

<div class="account-settings-wrapper py-5 d-flex justify-content-center">
    <div class="account-settings-container" style="max-width: 1100px; width: 100%;">

        <div class="title-section mb-3 ps-3">
            <h2 class="fw-bold mb-0 text-dark">
                Account Settings
                <span class="text-secondary fs-5">› Personal Info</span>
            </h2>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert">
                @Model.StatusMessage
            </div>
        }

        <div class="account-card shadow rounded-4 bg-white d-flex overflow-hidden">

            <div class="account-sidebar p-4 border-end">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <button id="btnPersonalInfo" class="nav-link active w-100 text-start" type="button">
                            <i class="bi bi-person-circle me-2"></i> Personal Info
                        </button>
                    </li>
                    <li class="nav-item">
                        <a id="btnChangePassword" asp-area="Doctor" asp-page="/AccountSettings/ChangePassword" class="nav-link w-100 text-start">
                            <i class="bi bi-lock me-2"></i> Change Password
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Content -->
            <div class="account-content flex-grow-1 p-4">
                <!-- Personal Info -->
                <div id="personalInfoSection">
                    <h4 class="fw-bold mb-4 text-dark">Personal Info</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="text-center mb-4 position-relative avatar-upload-wrapper">
                            <img id="avatarPreview" src="@Model.AvatarUrl" alt="Profile Picture" class="profile-image" role="button" />
                            <input id="avatarUpload" asp-for="AvatarFile" type="file" accept="image/*" class="d-none" />
                            <button type="button" id="avatarUploadBtn" class="btn btn-sm btn-secondary position-absolute bottom-0 end-0 translate-middle-y">
                                <i class="bi bi-camera"></i>
                            </button>
                        </div>
                        <span asp-validation-for="AvatarFile" class="text-danger d-block text-center mb-3"></span>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label fw-semibold"></label><span class="text-danger">*</span>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label fw-semibold"></label><span class="text-danger">*</span>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold"></label><span class="text-danger">*</span>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-dark mt-3 px-4">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account-settings.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
