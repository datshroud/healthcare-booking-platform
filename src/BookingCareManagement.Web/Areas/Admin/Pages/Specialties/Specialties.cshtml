@page "/specialties"
@model BookingCareManagement.Web.Areas.Admin.Pages.Specialties.SpecialtiesModel
@{
    ViewData["Title"] = "Specialties";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Specialties.css" />
    <style>
        .select2-container--open {
            z-index: 1056; /* Đảm bảo Select2 hiển thị trên modal */
        }
    </style>
}

<div class="main-container">
    <div class="header">
        <h1>Chuyên khoa</h1>
        <div class="header-buttons">
            <button class="btn-add" data-bs-toggle="modal" data-bs-target="#addSpecialtyModal">
                <i class="fas fa-plus"></i>
                Thêm vào chuyên khoa
            </button>
        </div>
    </div>

    <div class="content-card">
        <div class="main-content1">

            <div class="specialties-content">
                <div class="specialties-header">
                    <div class="specialties-title">
                        Tất cả các chuyên khoa <span class="specialties-count" id="specialty-count">(0)</span>
                    </div>
                    <div class="dropdown">
                        <button class="sort-dropdown dropdown-toggle" ...>
                        </button>
                        <ul class="dropdown-menu" id="sort-options-menu">
                        </ul>
                    </div>
                </div>

                <div class="specialties-table-header">
                    <div></div>
                    <div>Tên</div>
                    <div>Trạng thái</div>
                    <div>Mô tả</div>
                    <div></div>
                </div>

                <div id="specialty-list-container">
                    <div class="p-3 text-center text-muted">Đang tải chuyên khoa...</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addSpecialtyModal" tabindex="-1" aria-labelledby="addSpecialtyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSpecialtyModalLabel">Thêm chuyên khoa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="add-specialty-form">
                    <div class="row g-4">
                        <div class="col-lg-5">
                            <label class="modal-form-label">Hình ảnh chuyên khoa</label>
                            <input type="file" id="specialtyImageInput" hidden accept="image/*">
                            <div class="specialty-upload-box" id="specialtyUploadBox">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <p>Kéo và thả hoặc <br><a href="#" onclick="document.getElementById('specialtyImageInput').click(); event.preventDefault();">chọn từ tệp</a></p>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="mb-3">
                                <label for="specialtyName" class="modal-form-label">Tên chuyên khoa <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="specialtyName" placeholder="Nhập tên">
                            </div>
                            <div class="mb-3">
                                <label for="specialtySlug" class="modal-form-label">Slug (tùy chọn)</label>
                                <input type="text" class="form-control" id="specialtySlug" placeholder="vd: xet-nghiem" />
                            </div>
                            <div class="mb-3">
                                <label for="specialtyColor" class="modal-form-label">Màu sắc hiển thị</label>
                                <div class="color-picker-wrapper">
                                    <input type="text" class="form-control" id="specialtyColor" value="#1a73e8">
                                    <div class="color-swatch" style="background-color: #1a73e8;">
                                        <input type="color" id="specialtyColorPicker" value="#1a73e8">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="specialtyDescriptionEditor" class="modal-form-label">Mô tả</label>
                                <textarea id="specialtyDescriptionEditor" name="specialtyDescriptionEditor" placeholder="Nhập mô tả ở đây ..."></textarea>
                                <small class="form-text text-muted mt-2 d-block">Mô tả sẽ xuất hiện trên trang đặt lịch của bạn.</small>
                            </div>
                            <div class="mb-3">
                                <label for="specialtyDoctors" class="modal-form-label">Bác sĩ đảm nhiệm</label>
                                <select class="form-select" id="specialtyDoctors" multiple>
                                </select>
                                <small class="form-text text-muted mt-2 d-block">Chọn các bác sĩ sẽ xuất hiện cùng chuyên khoa này.</small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-modal-cancel" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-add" id="btn-save-specialty">Thêm chuyên khoa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/SpecialtiesAdmin.js" asp-append-version="true"></script>
}