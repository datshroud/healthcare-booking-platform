@page "/doctors"
@model BookingCareManagement.Web.Areas.Admin.Pages.Doctors.DoctorsModel
@{
    ViewData["Title"] = "Bác sĩ";
}

@section Styles {

    <link rel="stylesheet" href="~/css/Doctors.css" />
}

<div class="main-container">
    <div class="header">
        <h1 id="doctor-count-title">Bác sĩ (0)</h1>
        <div class="header-buttons">
            <span class="btn-view-employee" id="doctor-plan-info" data-plan-limit="15" style="padding: 10px 16px; cursor: default;">
                Bác sĩ trong gói 0/15
            </span>
            <button class="btn-add-employee" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                <i class="fas fa-plus"></i> Thêm bác sĩ
            </button>
        </div>
    </div>

    <div class="content-card">
        <div class="search-filter-row">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Tìm kiếm" id="searchInput">
            </div>
            <button class="btn-filter">
                <i class="fas fa-sliders-h"></i> Bộ lọc
            </button>
        </div>
        <table class="employee-table">
            <thead>
                <tr>
                    <th><input type="checkbox" id="selectAll"></th>
                    <th>Bác sĩ</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="doctor-table-body">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeModalLabel">Thêm bác sĩ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-5">
                        <input type="file" id="fileUploadInput" hidden>

                        <div class="file-upload-area">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <p>
                                Drop file here or <br><a href="#"
                                                         onclick="document.getElementById('fileUploadInput').click(); event.preventDefault();">click to upload</a>
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-7">
                        <form>
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Tên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="firstName" placeholder="Nhập tên">
                            </div>
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Họ <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="lastName" placeholder="Nhập họ">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" id="email" placeholder="vidu@congty.com">
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Điện thoại</label>
                                <div class="input-group">
                                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="https://flagcdn.com/w20/vn.png" alt="VN Flag"> +84
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#"><img src="https://flagcdn.com/w20/vn.png" alt="VN Flag" class="me-2"> +84 (Vietnam)</a></li>
                                        <li><a class="dropdown-item" href="#"><img src="https://flagcdn.com/w20/us.png" alt="US Flag" class="me-2"> +1 (USA)</a></li>
                                    </ul>
                                    <input type="text" class="form-control" id="phone" placeholder="Phone number">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="service" class="form-label">Chuyên khoa (Dịch vụ)</label>
                                <select class="form-select" id="service">
                                </select>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-custom" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-primary-custom" id="btn-add-employee-submit">Thêm bác sĩ</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Doctors.js"></script>
}